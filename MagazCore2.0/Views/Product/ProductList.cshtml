@model IEnumerable<MagazCore2._0.Models.ProductViewModel>

@{
    ViewData["Title"] = "ProductList";
}

<h1>ProductList</h1>

<p>
    <a asp-action="CreateProduct">Create Neww</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>

                
                <img style="max-width:200px" src="/chikayo.gif" />
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="GetImage" asp-route-id="@item.ID">Details</a> |
                <a asp-action="DeleteProduct" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
